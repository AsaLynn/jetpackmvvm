<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07B6BF">

    <com.zxn.tablayout.ProminentTabLayout
        android:id="@+id/prominentTabLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="14dp"
        app:indicatorTopLeftRadius="6dp"
        app:indicatorTopRightRadius="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_indicator_color="#ffffff"
        app:tl_indicator_height="55dp"
        app:tl_indicator_margin_bottom="0dp"
        app:tl_textSelectColor="#111A34"
        app:tl_textSelectSize="15sp"
        app:tl_textUnSelectSize="12sp"
        app:tl_textUnselectColor="#ffffff" />

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tvBack"
        app:layout_constraintTop_toTopOf="@id/prominentTabLayout" />

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>